From: amspeople <amspeople@yandex.ru>
Date: Mon, 13 Apr 2015 18:23:46 +0300
Subject: [PATCH] Show/Hide notice empty SIM

Change-Id: Iaf003f4878d09b4769fc1343f867199197d7ca8e
---
 res/values-ru/cm_strings.xml    | 5 +++++
 res/values/cm_strings.xml       | 5 +++++
 res/xml/status_bar_settings.xml | 8 ++++++++
 3 files changed, 18 insertions(+)

diff --git a/res/values-ru/cm_strings.xml b/res/values-ru/cm_strings.xml
index abf588d..d9152c6 100644
--- a/res/values-ru/cm_strings.xml
+++ b/res/values-ru/cm_strings.xml
@@ -813,4 +813,9 @@
   <string name="battery_saver_threshold">Автом. энергосбережение</string>
   <string name="battery_saver_summary">Снизить производительность и ограничить фоновую передачу данных</string>
   <string name="battery_saver_summary_unavailable">Недоступно во время зарядки</string>
+  
+  	<!-- Show/Hide empty sim message --> 
+	<string name="status_bar_toggle_empty_sim_message">Уведомление об отсутствии SIM-карты</string>
+	<string name="status_bar_toggle_empty_sim_message_summary_off">Скрывать уведомление, если SIM-карта не установлена</string>
+	<string name="status_bar_toggle_empty_sim_message_summary_on">Показывать уведомление, если SIM-карта не установлена</string>
 </resources>
diff --git a/res/values/cm_strings.xml b/res/values/cm_strings.xml
index 7adb7a5..9bbc0d3 100644
--- a/res/values/cm_strings.xml
+++ b/res/values/cm_strings.xml
@@ -1174,4 +1174,9 @@
     <string name="battery_saver_threshold">Battery saver threshold</string>
     <string name="battery_saver_summary">Reduce performance and limit background data</string>
     <string name="battery_saver_summary_unavailable">Not available while charging</string>
+    
+    <!-- Show/Hide empty sim message --> 
+	<string name="status_bar_toggle_empty_sim_message">Notice that SIM is missing</string>
+	<string name="status_bar_toggle_empty_sim_message_summary_off">Hide notice if SIM is not installed</string>
+	<string name="status_bar_toggle_empty_sim_message_summary_on">Show notice if SIM is not installed</string>
 </resources>
diff --git a/res/xml/status_bar_settings.xml b/res/xml/status_bar_settings.xml
index cbb316b..175eedd 100644
--- a/res/xml/status_bar_settings.xml
+++ b/res/xml/status_bar_settings.xml
@@ -52,6 +52,14 @@
         android:title="@string/status_bar_show_unused_sims_title"
         android:summaryOn="@string/status_bar_show_unused_sims_title_summary_on"
         android:summaryOff="@string/status_bar_show_unused_sims_title_summary_off" />
+        
+     <!-- Show/Hide empty sim message -->  
+     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
+        android:key="status_bar_hide_empty_sim_message"
+        android:title="@string/status_bar_toggle_empty_sim_message"
+        android:summaryOn="@string/status_bar_toggle_empty_sim_message_summary_on"
+        android:summaryOff="@string/status_bar_toggle_empty_sim_message_summary_off"
+        android:defaultValue="true" />
 
     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
         android:key="status_bar_brightness_control"
