From: proDOOMman <prodoomman@gmail.com>
Date: Sat, 4 Apr 2015 18:55:13 +0300
Subject: [PATCH] Add the ability to hide exclamation marks from signal
 strength icons

Change-Id: I36db7564344bc3873f2e4879f64c468d16c1bb99
---
 res/xml/bliss_status_bar_signal_settings.xml | 7 +++++++
 1 file changed, 7 insertions(+)

diff --git a/res/xml/bliss_status_bar_signal_settings.xml b/res/xml/bliss_status_bar_signal_settings.xml
index 82cdc0c..0939aaf 100644
--- a/res/xml/bliss_status_bar_signal_settings.xml
+++ b/res/xml/bliss_status_bar_signal_settings.xml
@@ -18,6 +18,13 @@
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:title="@string/status_bar_signal_settings_title">
 
+    <!-- exclamation marks v01 -->
+    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
+        android:key="statusbar_exclamation_marks"
+        android:title="@string/statusbar_exclamation_marks_display"
+        android:summary="@string/statusbar_exclamation_marks_desc"
+        android:defaultValue="true" />
+
    <SwitchPreference
         android:key="signal_wifi_show_network_activity"
         android:title="@string/signal_wifi_show_activity_title"
