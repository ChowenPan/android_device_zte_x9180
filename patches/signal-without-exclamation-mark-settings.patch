From 16aadfd9d6e8baf31a230588746d6bf1d520cf2d Mon Sep 17 00:00:00 2001
From: proDOOMman <prodoomman@gmail.com>
Date: Sat, 4 Apr 2015 18:55:13 +0300
Subject: [PATCH] Add the ability to hide exclamation marks from signal
 strength icons

Change-Id: I36db7564344bc3873f2e4879f64c468d16c1bb99
---
 res/xml/status_bar_settings.xml | 7 +++++++++
 1 file changed, 7 insertions(+), 0 deletion(-)

diff --git a/res/xml/status_bar_settings.xml b/res/xml/status_bar_settings.xml
index 0544b6b..f1c4f9c 100644
--- a/res/xml/status_bar_settings.xml
+++ b/res/xml/status_bar_settings.xml
@@ -64,12 +64,19 @@
             android:defaultValue="false" />

     <!-- statusbar_powerkey v01 -->
     <com.android.settings.slim.SystemSettingSwitchPreference
         android:key="statusbar_powerkey"
         android:title="@string/statusbar_powerkey_display"
         android:summary="@string/statusbar_powerkey_desc"
         android:defaultValue="false" />
 
+    <!-- exclamation marks v01 -->
+    <com.android.settings.slim.SystemSettingSwitchPreference
+        android:key="statusbar_exclamation_marks"
+        android:title="@string/statusbar_exclamation_marks_display"
+        android:summary="@string/statusbar_exclamation_marks_desc"
+        android:defaultValue="true" />
+
     <com.android.settings.slim.SystemSettingSwitchPreference
             android:key="double_tap_sleep_gesture"
             android:title="@string/double_tap_to_sleep_title"
